<div class="w-full">

  <div class="flex justify-between items-center">
    <h1>Cities</h1>
    <%= link_to "New city", new_city_path, class: "button-large" %>
  </div>

  <div id="cities" class="min-w-full">
    <ul>
    <% @cities.each do |city| %>
      <li>
        <%= link_to(city.name, city_path(city)) %>
      </li>
    <% end %>
    </ul>
  </div>
</div>
